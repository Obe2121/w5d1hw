{% extends 'base.html.j2' %}

{% block title %}
Pokemon Results
{% endblock %}

{% block content %}
 <h1>Pokemon Stats</h1>
    <form method="POST" action="/pokemon">
    <div class="mb-3">
        <label for="pokemon_name" class="form-label">Pokemon Name</label>
        <input type="text" name="pokemon_name" class="form-control" id="pokemon_name">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {% if pokemons %}
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Poke Name</th>
            <th scope="col">Base HP</th>
            <th scope="col">Base Defense</th>
            <th scope="col">Base Attack</th>

            </tr> 
        </thead>
        <tbody>
            {% for pokemon in pokemons %}
                <tr>
                    <th scope="row">{{pokemon['poke_name']}}</th>
                    <td>{{pokemon['base_hp']}}</td>
                    <td>{{pokemon['base_defense']}}</td>
                    <td>{{pokemon.base_attack}}</td>      
                </tr>
            {% endfor %}
        </tbody>
        </table>
    {% else %}
    Enter the pokemon you want to look at
    {% endif %}

{% endblock %}